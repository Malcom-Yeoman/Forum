{% extends 'base.html.twig' %}

{% block title %}SymForum | Inscription{% endblock %}

{% block body %}
    <div class="container mt-5 mb-5">
        <h1 class="text-center mb-4">Inscription</h1>
        <div class="row justify-content-center">
            <div class="col-md-6">
                <div class="card border-0 shadow">
                    <div class="card-body">
                        {{ form_errors(registrationForm) }}

                        {{ form_start(registrationForm, { 'attr': { 'class': 'needs-validation', 'novalidate': '' } }) }}
                            {{ form_row(registrationForm.pseudo, {
                                label: 'Pseudo',
                                'attr': {'class': 'form-control mb-3'}
                            }) }}
                            {{ form_row(registrationForm.email, {
                                label: 'Email',
                                'attr': {'class': 'form-control mb-3'}
                            }) }}
                            {{ form_row(registrationForm.plainPassword, {
                                label: 'Mot de passe',
                                'attr': {'class': 'form-control mb-3'}
                            }) }}
                            {{ form_row(registrationForm.agreeTerms, {
                                label: 'J\'accepte les termes et conditions',
                                'attr': {'class': 'form-check-input'}
                            }) }}

                            <button type="submit" class="btn btn-dark w-100">S'inscrire</button>
                        {{ form_end(registrationForm) }}
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}

