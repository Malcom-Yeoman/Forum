{% extends 'base.html.twig' %}

{% block title %}SymForum | Poster une question{% endblock %}

{% block body %}
    <div class="container mt-4">
        <div class="row">
            <div class="col-md-8 offset-md-2">
                <div class="card">
                    <div class="card-header bg-dark text-white">
                        Ajouter une nouvelle question
                    </div>
                    <div class="card-body">
                        {{ form_start(form, {'attr': {'class': 'form-horizontal'}}) }}
                            
                            {# Title Field #}
                            <div class="mb-3">
                                {{ form_label(form.title, null, {'label_attr': {'class': 'form-label'}}) }}
                                {{ form_widget(form.title, {'attr': {'class': 'form-control'}}) }}
                                {{ form_errors(form.title) }}
                            </div>

                            {# Content Field #}
                            <div class="mb-3">
                                {{ form_label(form.content, null, {'label_attr': {'class': 'form-label'}}) }}
                                {{ form_widget(form.content, {'attr': {'class': 'form-control'}}) }}
                                {{ form_errors(form.content) }}
                            </div>

                            {# Category Field #}
                            <div class="mb-3">
                                {{ form_label(form.category, null, {'label_attr': {'class': 'form-label'}}) }}
                                {{ form_widget(form.category, {'attr': {'class': 'form-select'}}) }}
                                {{ form_errors(form.category) }}
                            </div>

                            <div class="text-center">
                                <button type="submit" class="btn btn-dark">Ajouter</button>
                            </div>
                        {{ form_end(form) }}
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}